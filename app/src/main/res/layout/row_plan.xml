<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp">

        <View
            android:id="@+id/rdCheck"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/plan_circle_unselect" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/lytAmount"
            android:layout_toEndOf="@+id/rdCheck"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPlanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/sorabold"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/title"
                android:textSize="18sp"
                tools:text="Gold Plan" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvNoApplied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/job_skill_bg"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvNoApplied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/sora"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="3dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    tools:text="10 Jobs Apply" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/soraextrabold"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/title"
                    android:textSize="22sp"
                    tools:text="149.00/" />

                <TextView
                    android:id="@+id/tvCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/sorabold"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/title"
                    android:textSize="14sp"
                    tools:text="INR" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvPlanDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/sora"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/subTitle_80"
                android:textSize="12sp"
                tools:text="For 3 Month(s)" />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>

